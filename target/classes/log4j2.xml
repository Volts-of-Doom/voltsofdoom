<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="basePath">log/</Property>
    </Properties>
 
    <Appenders>
	
        <RollingFile name="debugFileLogger" fileName="${basePath}/debug/latest.log" filePattern="${basePath}/log-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
 
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>
		
    </Appenders><Loggers>
        <Logger name="VODLog4J" level="debug" additivity="true">
            <appender-ref ref="debugFileLogger" level="debug" />
        </Logger>
		
        <Root level="debug" additivity="false">
            <appender-ref ref="console" />
        </Root>
    </Loggers>
	
    
	
</Configuration>